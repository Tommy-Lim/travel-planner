<h2>Profile</h2>

<div class="well">
  <h2><%- currentUser.name %></h2>
  <hr />
  <div class="profile-container">
    <img src="<%- currentUser.image %>" class="profile-pic">
    <span>
      <p><strong>Home ZIP</strong></p>
      <p><%= currentUser.zip %></p>
      <p><strong>Destination ZIPs</strong><p>
      <p>
        <% user.cities.forEach(function(city){ %> <%= city.zip %> <% }) %>
        <% if(user.cities.length==0){%> None added <% }; %>
      </p>
    </span>
  </div>
</div>


<table class="table table-striped table-bordered">
  <thead>
    <th>Zip</th>
    <% weather[zips[0]].forecast.simpleforecast.forecastday.forEach(function(item){ %>
      <th><%- item.date.weekday.slice(0,3) %></th>
    <% }); %>
  </thead>
  <% zips.forEach(function(zip, index){ %>
    <tr>
      <td>
        <% if(index==0){ %>
          <%= zip %> (home)
        <% } else{ %>
          <%= zip %>
        <% } %>
      </td>
      <% weather[zip].forecast.simpleforecast.forecastday.forEach(function(item){ %>
        <td>
          <img class="weather-icon" src="<%- item.icon_url %>" />
          <%- item.low.fahrenheit %> &#8457
          <%- item.high.fahrenheit %> &#8457
        </td>
      <% }); %>
    </tr>
  <% }); %>
</table>
