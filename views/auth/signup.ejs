<h4>Sign up / <a href="/auth/login">Log in</a></h4>

<div class="well">

  <form class="" method="POST" action="/auth/signup">

    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" class="form-control" placeholder="1-99 characters" required />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input name="email" class="form-control" type="email" placeholder="user@email.com" required />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input name="password" class="form-control" type="password" placeholder="8-99 characters" required />
    </div>

    <input type="submit" class="btn btn-success blue" />

  </form>

</div>
