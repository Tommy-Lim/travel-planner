<div class="row">
  <h5>Sign up / <a href="/auth/login">Log in</a></h5>
</div>

<div class="row">

  <form class="" method="POST" action="/auth/signup" id="signup-form">

    <div class="input-field">
      <label for="name">Name</label>
      <input name="name" class="validate" placeholder="1-30 characters" type="text" pattern=".{1,30}" required />
    </div>
    <div class="input-field">
      <label for="email">Email</label>
      <input name="email" class="validate" type="email" placeholder="user@email.com" required />
    </div>
    <div class="input-field">
      <label for="password">Password</label>
      <input name="password" class="validate" type="password" placeholder="8-30 characters" pattern=".{8,30}" required />
    </div>

    <input type="submit" class="btn btn-success blue" />

  </form>

</div>
