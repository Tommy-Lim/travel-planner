<div class="card">
  <div class="card-content">
    <div class="card-title">
      <%= name %>
    </div>
    <p>Cloud cover: <%- weather.trip.cloud_cover.cond %></p>
    <br />
    <div class="card-action">
      <a href="/cities/forecast/<%- zip %>=<%- name %>" name="<%- name %>" class="blue-text"> <i class="fa fa-sun-o" aria-hidden="true"></i> Forecast</a>
      <a href="/cities/details/<%- zip %>=<%- name %>" name="<%- name %>" class="blue-text"> <i class="fa fa-info" aria-hidden="true"></i> Details</a>
      <% if(!currentUser){ %>
        <a href="/auth/login" class="tooltipped grey-text" data-position="bottom" data-delay="20" data-tooltip="Log in to access"> <i class="fa fa-lock" aria-hidden="true"></i> Add Destination</a>
        <a href="/auth/login" class="tooltipped grey-text" data-position="bottom" data-delay="20" data-tooltip="Log in to access"> <i class="fa fa-lock" aria-hidden="true"></i> Make Home</a>
      <% } else{ %>
        <a href="/profile/<%- zip %>=<%- name %>"> <i class="fa fa-plus" aria-hidden="true"></i> Add Destination</a>
        <a href="/profile/home/<%- zip %>=<%- name %>"> <i class="fa fa-plus" aria-hidden="true"></i> Make Home</a>
      <% }; %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-content">
    <div class="card-title">
      Historical Temp, Precip, and Dewpoint
    </div>
    <p>
      <%= weather.trip.title.split(" for ")[1] %>
      <a href="#modalDatesHistorical"> <i class="fa fa-pencil" aria-hidden="true"></i></a>
    </p>
    <p class="grey-text">5-yr period average, 30-day max range</p>
    <br />
    <table class="striped bordered centered">
      <thead>
        <tr>
          <th></th>
          <th>Min</th>
          <th>Avg</th>
          <th>High</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>Temp High</th>
          <td><%- weather.trip.temp_high.min.F %>&#8457</td>
          <td><%- weather.trip.temp_high.avg.F %>&#8457</td>
          <td><%- weather.trip.temp_high.max.F %>&#8457</td>
        </tr>
        <tr>
          <th>Temp Avg</th>
          <td><%- ((parseInt(weather.trip.temp_high.min.F) + parseInt(weather.trip.temp_low.min.F))/2).toFixed(0) %>&#8457</td>
          <td><%- ((parseInt(weather.trip.temp_high.avg.F) + parseInt(weather.trip.temp_low.avg.F))/2).toFixed(0) %>&#8457</td>
          <td><%- ((parseInt(weather.trip.temp_high.max.F) + parseInt(weather.trip.temp_low.max.F))/2).toFixed(0) %>&#8457</td>
        </tr>
        <tr>
          <th>Temp Low</th>
          <td><%- weather.trip.temp_low.min.F %>&#8457</td>
          <td><%- weather.trip.temp_low.avg.F %>&#8457</td>
          <td><%- weather.trip.temp_low.max.F %>&#8457</td>
        </tr>
        <tr>
          <th>Precip Avg</th>
          <td><%- weather.trip.precip.min.in %>in.</td>
          <td><%- weather.trip.precip.avg.in %>in.</td>
          <td><%- weather.trip.precip.max.in %>in.</td>
        </tr>
        <tr>
          <th>Dewpoint High</th>
          <td><%- weather.trip.dewpoint_high.min.F %>&#8457</td>
          <td><%- weather.trip.dewpoint_high.avg.F %>&#8457</td>
          <td><%- weather.trip.dewpoint_high.max.F %>&#8457</td>
        </tr>
        <tr>
          <th>Dewpoint Avg</th>
          <td><%- ((parseInt(weather.trip.dewpoint_high.min.F) + parseInt(weather.trip.dewpoint_low.min.F))/2).toFixed(0) %>&#8457</td>
          <td><%- ((parseInt(weather.trip.dewpoint_high.avg.F) + parseInt(weather.trip.dewpoint_low.avg.F))/2).toFixed(0) %>&#8457</td>
          <td><%- ((parseInt(weather.trip.dewpoint_high.max.F) + parseInt(weather.trip.dewpoint_low.max.F))/2).toFixed(0) %>&#8457</td>
        </tr>
        <tr>
          <th>Dewpoint Low</th>
          <td><%- weather.trip.dewpoint_low.min.F %>&#8457</td>
          <td><%- weather.trip.dewpoint_low.avg.F %>&#8457</td>
          <td><%- weather.trip.dewpoint_low.max.F %>&#8457</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

