<!-- Modal Structure -->
<div id="modalDatesHistorical" class="modal">
 <div class="modal-content">
   <form method="POST" action="/cities/historical/<%= zip %>=<%= name %>">
    <div class="row">
      <div class="input-field col s12">
        <input value="<%- start %>" name="historystart" class="datepickerHistorical" type="text" required />
        <label class="active" for="historystart">Period Start</label>
      </div>
      <div class="input-field col s12">
        <input value="<%- end %>" name="historyend" class="datepickerHistorical" type="text" required />
        <label class="active" for="historyend">Period End</label>
      </div>
    </div>
    <input type="submit" class="btn blue" />
   </form>
 </div>
</div>
