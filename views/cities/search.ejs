<% include ../partials/search %>

<hr />

<% if(cities.length>=1){ %>
  <% cities.forEach(function(city){ %>
    <div class="well">
      <h5><%- city.name %> <%= city.zmw.split('.')[0]%></h5>
      <a href="/profile/home/<%- city.zmw.split('.')[0] %>=<%- city.name %>" type="submit" class="btn btn-xs btn-primary add-button"> <i class="fa fa-plus" aria-hidden="true"></i><span class="button-text"> Home</span></a>
      <a href="/profile/<%- city.zmw.split('.')[0] %>=<%- city.name %>" type="submit" class="btn btn-xs btn-primary add-button"> <i class="fa fa-plus" aria-hidden="true"></i><span class="button-text"> Destination</span></a>
      <a href="/cities/details/<%- city.zmw.split('.')[0] %>=<%- city.name %>" name="<%- city.name %>" class="btn btn-xs btn-info"> <i class="fa fa-info" aria-hidden="true"></i><span class="button-text"> Details</span></a>
      <a href="/cities/forecast/<%- city.zmw.split('.')[0] %>=<%- city.name %>" name="<%- city.name %>" class="btn btn-xs btn-info"> <i class="fa fa-sun-o" aria-hidden="true"></i><span class="button-text"> Forecast</span></a>
      <a href="/cities/historical/<%- city.zmw.split('.')[0] %>=<%- city.name %>" name="<%- city.name %>" class="btn btn-xs btn-info"> <i class="fa fa-history" aria-hidden="true"></i><span class="button-text"> Historical</span></a>
    </div>
  <% }); %>
<% } else { %>
  <h3>No search results found.</h3>
<% }; %>
