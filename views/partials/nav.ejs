<% if(!currentUser){ %>

<% } else{ %>
  <!-- Settings Modal Structure -->
  <div id="modalSettings" class="modal">
   <div class="modal-content">
     <form method="POST" action="/profile/settings" id="update-currentUser">

       <div class="form-group">
         <label for="name">Name</label>
         <input name="name" class="form-control" value="<%= currentUser.name %>" required />
       </div>
       <div class="form-group">
         <label for="email">Email</label>
         <input name="email" class="form-control" type="email" value="<%= currentUser.email %>" required />
       </div>
       <div class="form-group">
         <label for="age">Age</label>
         <input name="age" class="form-control" type="number" value="<%= currentUser.age %>" />
       </div>
       <div class="form-group">
         <label for="image">Profile Image URL</label>
         <input name="image" class="form-control"  value="<%= currentUser.image %>" />
       </div>
       <div class="form-group">
         <label for="historystart">Travel/Historical Start (MMDD)</label>
         <input name="historystart" class="form-control" type="number" value="<%= currentUser.historystart %>" />
       </div>
       <div class="form-group">
         <label for="historyend">Travel/Historical End (MMDD)</label>
         <input name="historyend" class="form-control"  value="<%= currentUser.historyend %>" />
       </div>

       <input type="submit" class="btn btn-success" />

     </form>
   </div>
  </div>
<% }; %>
